<UserControl x:Class="EmployeeInformation.WPF.Components.EmployeeDetailsForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:EmployeeInformation.WPF.Components" 
             xmlns:converter="clr-namespace:EmployeeInformation.WPF.Converters" 
             xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:custom="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="950">

    <UserControl.Resources>
        <converter:BoolToVisibilityConverter
            x:Key="BoolToHiddenConverter" 
            TrueValue="Hidden" FalseValue="Visible"/>

        <converter:BoolToVisibilityConverter x:Key="BoolToVis"/>

        <converter:StringToPhoneConverter x:Key="StringToPhoneConverter"/>

        <converter:StringToDateConverter x:Key="StringToDateConverter"/>

        <Style TargetType="TextBox">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="MaxLength" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <EventSetter Event="PreviewTextInput" Handler="NumericOnly"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="VacationTextBlockMonths">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="VacationTextBox">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>


    <Border>
        <Border.Background>
            <ImageBrush ImageSource="/Assets/backimage.jpg"/>
        </Border.Background>
        <Border>
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="BlanchedAlmond" Offset="0"/>
                    <GradientStop Color="#ffc671" Offset="0.75"/>
                    <GradientStop Color="DarkSalmon" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0.05" EndPoint="1,1">
                    <GradientStop Color="#CC424242" Offset="0.817"/>
                    <GradientStop Color="#CCE4DEDE" Offset="0.353"/>
                </LinearGradientBrush>
            </Border.Background>




            <TabControl Grid.Row="0" Background="Transparent">

                <!--#region KİŞİSEL BİLGİLER-->
                <TabItem Header="KİŞİSEL" Style="{StaticResource tabItemStyle}">
                    <Grid Grid.IsSharedSizeScope="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="50"/>

                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="400"/>
                            <ColumnDefinition Width="400"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="25"/>
                        </Grid.ColumnDefinitions>

                        <Rectangle Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Width="550" Height="100" Stroke="Black" StrokeThickness="3" HorizontalAlignment="Right"/>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="5 0 0 0" Grid.Column="1" Grid.Row="1">
                            <Button Grid.Row="0" Grid.Column="0" Content="Fotoğraf Yükle"
                            Command="{Binding UploadPhotoCommand}">

                            </Button>
                        </StackPanel>

                        <Grid Grid.Row="1" Margin="0 0 0 40" Grid.Column="1">

                            <Image x:Name="PhotoSource"
                        HorizontalAlignment="Left"
                        UseLayoutRounding="True"
                        Stretch="Fill"
                        Source="{Binding PhotoSource, UpdateSourceTrigger=PropertyChanged}"
                        Width="150" Height="150"/>
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
                            <TextBlock  Text="PERSONEL FORMU"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="240 0 0 0"
                                        TextAlignment="Center"
                                        FontSize="30"
                                        FontFamily="Segoe UI"
                                        FontWeight="Bold"/>
                        </Grid>

                        <Grid Grid.Row="3" Grid.Column="1" Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="label"/>
                                <ColumnDefinition Width="*" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                            Grid.Column="0"
                            FontWeight="Bold"
                            Text="TC KİMLİK NO" VerticalAlignment="Center"/>

                            <TextBox
                            Style="{StaticResource TextBoxStyle1}"
                            KeyboardNavigation.TabIndex="2"
                                MaxLength="11"
                            Grid.Column="1"
                            Margin="20 0 0 0"
                            Text="{Binding TCKimlik, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>

                        </Grid>

                        <Grid Grid.Row="3" Grid.Column="2" Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="labelSag"/>
                                <ColumnDefinition Width="*" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                FontWeight="Bold"
                                Text="DEPARTMAN" VerticalAlignment="Center"/>

                            <ComboBox 
                                KeyboardNavigation.TabIndex="7"
                                Grid.Column="1"
                                Margin="20 0 0 0"
                                
                                
                                ItemsSource="{Binding DepartmentListingItemViewModels}"
                                SelectedItem="{Binding SelectedDepartmentItem, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                SelectedValue="{Binding SelectedDepartmentValue}"

                                
                                SelectedValuePath="DepartmentId"
                                DisplayMemberPath="DepartmentName"
                                IsSynchronizedWithCurrentItem="True">
                            </ComboBox>

                        </Grid>

                        <Grid Grid.Row="4" Grid.Column="2" Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="labelSag"/>
                                <ColumnDefinition Width="*" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                FontWeight="Bold"
                                Text="GÖREVİ" VerticalAlignment="Center"/>

                            <ComboBox
                                KeyboardNavigation.TabIndex="8"
                                Grid.Column="1"
                                Margin="20 0 0 0"
                                
                                ItemsSource="{Binding SectorListingItemViewModels}"
                                SelectedItem="{Binding SelectedSectorItem, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                SelectedValue="{Binding SelectedSectorValue}"

                                
                                SelectedValuePath="SectorId"                             
                                DisplayMemberPath="SectorName"
                                IsSynchronizedWithCurrentItem="True">

                            </ComboBox>
                        </Grid>

                        <Grid Grid.Row="5" Grid.Column="2" Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="labelSag"/>
                                <ColumnDefinition Width="*" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                FontWeight="Bold"
                                Text="MAAŞ" VerticalAlignment="Center"/>

                            <TextBox
                                Style="{StaticResource TextBoxStyle1}"
                        KeyboardNavigation.TabIndex="9"
                                Grid.Column="1"
                                Margin="20 0 0 0"
                                Text="{Binding Maas, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Row="6" Grid.Column="2" Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="labelSag"/>
                                <ColumnDefinition Width="*" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                FontWeight="Bold"
                                Text="CEP TELEFONU" VerticalAlignment="Center"/>

                            <TextBox
                                Style="{StaticResource TextBoxStyle1}"
                                KeyboardNavigation.TabIndex="10"
                                MaxLength="14"
                                Grid.Column="1"
                                Margin="20 0 0 0"
                                Text="{Binding CepTel, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToPhoneConverter}}"
                                VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Row="7" Grid.Column="2" Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="labelSag"/>
                                <ColumnDefinition Width="*" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                FontWeight="Bold"
                                Width="155"
                                HorizontalAlignment="Left"
                                Text="ŞİRKET SAHİBİ İLE İLK İŞE BAŞLAMA"
                                TextWrapping="WrapWithOverflow"
                                TextAlignment="Justify" VerticalAlignment="Center"/>

                            <TextBox
                                Style="{StaticResource TextBoxStyle1}"
                                KeyboardNavigation.TabIndex="11"
                                MaxLength="10"
                                Grid.Column="1"
                                Margin="20 0 0 0"
                                Text="{Binding BaslamaTarihi, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDateConverter}}"
                                VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Row="8" Grid.Column="2" Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="labelSag"/>
                                <ColumnDefinition Width="*" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                            Grid.Column="0"
                            FontWeight="Bold"
                            Width="155"
                            HorizontalAlignment="Left"
                            Text="AKTİF ÇALIŞAN MI?"
                            TextWrapping="WrapWithOverflow"
                            TextAlignment="Justify" VerticalAlignment="Center"/>

                            <CheckBox
                            Grid.Column="1"
                            Margin="20 0 0 0"
                            VerticalAlignment="Center"
                            IsChecked="{Binding Durum}"/>


                        </Grid>


                        <Grid Grid.Row="2" Margin="0 10 0 0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="label"/>
                                <ColumnDefinition Width="*" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                        Grid.Column="0"
                        FontWeight="Bold"
                        Text="ADI" VerticalAlignment="Center"/>

                            <TextBox
                        Style="{StaticResource TextBoxStyle1}"
                        KeyboardNavigation.TabIndex="0"
                        Grid.Column="1"
                        Margin="20 0 0 0"
                        Text="{Binding Isim, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Row="2" Grid.Column="2" Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="labelSag"/>
                                <ColumnDefinition Width="*" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                        Grid.Column="0"
                        FontWeight="Bold"
                        Text="SOYADI" VerticalAlignment="Center"/>

                            <TextBox
                        Style="{StaticResource TextBoxStyle1}"
                        KeyboardNavigation.TabIndex="1"
                        Grid.Column="1"
                        Margin="20 0 0 0"
                        Text="{Binding Soyisim, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Row="4" Margin="0 10 0 0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="label"/>
                                <ColumnDefinition Width="*" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                        Grid.Column="0"
                        FontWeight="Bold"
                        Text="DOĞUM TARİHİ" VerticalAlignment="Center"/>

                            <TextBox
                                Style="{StaticResource TextBoxStyle1}"
                                KeyboardNavigation.TabIndex="3"
                                Grid.Column="1"
                                Margin="20 0 0 0"
                                MaxLength="10"
                                Text="{Binding DogumTarihi, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDateConverter}}"
                                VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Row="5" Margin="0 10 0 0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="label"/>
                                <ColumnDefinition Width="*" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                        Grid.Column="0"
                        FontWeight="Bold"
                        Text="MEDENİ HAL" VerticalAlignment="Center"/>

                            <ComboBox 
                                KeyboardNavigation.TabIndex="5"
                                Grid.Column="1"
                                Margin="20 0 0 0"
                                VerticalContentAlignment="Center"
                                
                                ItemsSource="{Binding MaritialStatusListingItemViewModels}"
                                SelectedItem="{Binding SelectedMaritialStatusItem, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                SelectedValue="{Binding SelectedMaritialStatusValue}"

                                                                
                                DisplayMemberPath="MaritialStatusName"
                                SelectedValuePath="MaritialStatusId"
                                IsSynchronizedWithCurrentItem="True">

                            </ComboBox>
                        </Grid>

                        <Grid Grid.Row="6" Margin="0 10 0 0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="label"/>
                                <ColumnDefinition Width="*" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                        Grid.Column="0"
                        FontWeight="Bold"
                        Text="EĞİTİM DURUMU" VerticalAlignment="Center"/>

                            <ComboBox 
                                KeyboardNavigation.TabIndex="5"
                                Grid.Column="1"
                                Margin="20 0 0 0"
                                VerticalContentAlignment="Center"
                                
                                ItemsSource="{Binding EducationListingItemViewModels}"
                                SelectedItem="{Binding SelectedEducationItem, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                SelectedValue="{Binding SelectedEducationValue}"

                                                                
                                DisplayMemberPath="EducationDegree"
                                SelectedValuePath="EducationId"
                                IsSynchronizedWithCurrentItem="True">
                            </ComboBox>
                        </Grid>

                        <Grid Grid.Row="7" Margin="0 10 0 0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="label"/>
                                <ColumnDefinition Width="*" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                        Grid.Column="0"
                        FontWeight="Bold"
                        Text="ASKERLİK DURUMU" VerticalAlignment="Center"/>

                            <ComboBox 
                                KeyboardNavigation.TabIndex="6"
                                Grid.Column="1"
                                Margin="20 0 0 0"
                                Height="30"
                                VerticalContentAlignment="Center"
                                
                                ItemsSource="{Binding MilitaryListingItemViewModels}"
                                SelectedItem="{Binding SelectedMilitaryServiceItem, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                SelectedValue="{Binding SelectedMilitaryServiceValue}"
                                                                
                                DisplayMemberPath="MilitaryStatus"
                                SelectedValuePath="MilitaryServiceId"
                                IsSynchronizedWithCurrentItem="True">
                            </ComboBox>
                        </Grid>

                        <Grid Grid.Row="8" Margin="0 10 0 0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="label"/>
                                <ColumnDefinition Width="*" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                        Grid.Column="0"
                        FontWeight="Bold"
                        Text="İŞE GİRİŞ TARİHİ" VerticalAlignment="Center"/>

                            <TextBox
                                Style="{StaticResource TextBoxStyle1}"
                                MaxLength="10"
                                Grid.Column="1"
                                Margin="20 0 0 0"
                                Text="{Binding IseGiris, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDateConverter}}"
                                VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Row="9" Margin="0 10 0 0" Grid.Column="1" Visibility="{Binding Durum, Converter={StaticResource BoolToHiddenConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="label"/>
                                <ColumnDefinition Width="*" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                        Grid.Column="0"
                        FontWeight="Bold"
                        Text="İŞTEN ÇIKIŞ TARİHİ" VerticalAlignment="Center"/>

                            <TextBox
                                Style="{StaticResource TextBoxStyle1}"
                                Grid.Column="1"
                                Margin="20 0 0 0"
                                MaxLength="10"
                                Text="{Binding IstenCikis, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDateConverter}}"/>
                        </Grid>


                        <Separator Grid.Row="10" Margin="0 10 0 0" Width="auto" Grid.ColumnSpan="2" Background="#ff212121" Grid.Column="1"/>

                        <Grid Grid.Row="11" Margin="0 10 0 0" Grid.ColumnSpan="2" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="label"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                        Grid.Column="0"
                        FontWeight="Bold"
                        Text="EV ADRESİ" VerticalAlignment="Center"/>

                            <TextBox
                        Style="{StaticResource TextBoxStyle1}"
                        KeyboardNavigation.TabIndex="12"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Height="50"
                        Width="400"
                        Margin="20 0 0 0"
                        Text="{Binding EvAdresi, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Justify"
                        TextWrapping="WrapWithOverflow" VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Row="12" Grid.Column="1" Margin="0 10 0 0" Grid.ColumnSpan="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="label"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                        Grid.Column="0"
                        FontWeight="Bold"
                        Text="EK BİLGİLER" VerticalAlignment="Center"/>

                            <TextBox
                        Style="{StaticResource TextBoxStyle1}"
                        KeyboardNavigation.TabIndex="13"
                        Width="400"
                        Height="50"
                        HorizontalAlignment="Left"
                        Grid.Column="1"
                        Margin="20 0 0 0"
                        Text="{Binding EkBilgi, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Justify"
                        TextWrapping="WrapWithOverflow" VerticalAlignment="Center"/>

                        </Grid>


                        <WrapPanel Grid.Row="11" 
                           Grid.Column="2"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Right"
                           Margin="0 10 20 0">

                            <Button 
                        Margin="0 0 5 0"
                        Content="KAYDET"
                        Command="{Binding SubmitCommand}"
                        IsEnabled="{Binding CanSubmit}" />

                            <Button 
                        Content="ÇIKIŞ"
                        Style="{StaticResource ButtonSecondary}"
                        Command="{Binding CancelCommand}"/>

                        </WrapPanel>

                        <custom:LoadingSpinner Grid.Row="12" Grid.Column="2"
                                       Margin="20 0 0 0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Thickness="2"
                                       Diameter="25" IsLoading="{Binding IsSubmitting}"/>
                        <TextBlock Grid.Row="12"
                           Grid.Column="2"
                           FontWeight="SemiBold"
                           Text="{Binding SaveStatus}" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Margin="0 0 35 0"
                           
                           Visibility="{Binding IsSaved, Converter={StaticResource BoolToHiddenConverter}}"/>

                        <TextBlock Grid.Row="12"
                           Grid.Column="2"
                           FontWeight="SemiBold"
                           Text="{Binding SaveStatus}" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Margin="0 0 25 0"
                           
                           Visibility="{Binding IsSaved, Converter={StaticResource BoolToVis}}"/>

                        <TextBlock Grid.Row="13"
                           Grid.Column="1"
                           Grid.ColumnSpan="2"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="DarkBlue"
                           Text="{Binding ErrorMessage}"
                           Visibility="{Binding HasErrorMessage, Converter={StaticResource BoolToVis}}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                    </Grid>
                </TabItem>
                <!--#endregion-->

                <TabItem Header="İZİNLER / GÖREVLER" 
                         Style="{StaticResource tabItemStyle}"
                         Visibility="{Binding IsAdding, Converter={StaticResource BoolToHiddenConverter}}">


                    <TabControl Background="Transparent">
                        <!--#region 2018-->

                        <TabItem Header="2018" Style="{StaticResource tabItemStyle2}">

                            <Grid Grid.IsSharedSizeScope="True" Margin="25">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>

                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="0 20 0 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" SharedSizeGroup="labelAy"/>
                                        <ColumnDefinition Width="120" SharedSizeGroup="labelUcretsiz"/>
                                        <ColumnDefinition Width="120" SharedSizeGroup="labelUcretli"/>
                                        <ColumnDefinition Width="120" SharedSizeGroup="labelRapor"/>
                                        <ColumnDefinition Width="120" SharedSizeGroup="labelYillik"/>
                                        <ColumnDefinition Width="120" SharedSizeGroup="labelYurtici"/>
                                        <ColumnDefinition Width="120" SharedSizeGroup="labelYurtdisi"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="1" Margin="10 0 0 0" Style="{StaticResource VacationTextBox}" HorizontalAlignment="Center" FontFamily="=Segoe UI" FontSize="12" Text="ÜCRETSİZ İZİN" />
                                    <TextBlock Grid.Column="2" Margin="10 0 0 0" Style="{StaticResource VacationTextBox}" HorizontalAlignment="Center" FontFamily="=Segoe UI" FontSize="12" Text="ÜCRETLİ İZİN" />
                                    <TextBlock Grid.Column="3" Margin="10 0 0 0" Style="{StaticResource VacationTextBox}" HorizontalAlignment="Center" FontFamily="=Segoe UI" FontSize="12" Text="RAPOR"/>
                                    <TextBlock Grid.Column="4" Margin="10 0 0 0" Style="{StaticResource VacationTextBox}" HorizontalAlignment="Center" FontFamily="=Segoe UI" FontSize="12" Text="YILLIK İZİN" />
                                    <TextBlock Grid.Column="5" Margin="10 0 0 0" Style="{StaticResource VacationTextBox}" HorizontalAlignment="Center" FontFamily="=Segoe UI" FontSize="12" Text="YURT İÇİ GÖREV" />
                                    <TextBlock Grid.Column="6" Margin="10 0 0 0" Style="{StaticResource VacationTextBox}" HorizontalAlignment="Center" FontFamily="=Segoe UI" FontSize="12" Text="YURT DIŞI GÖREV" />


                                </Grid>

                                <Grid Grid.Row="1" Margin="0 10 0 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" SharedSizeGroup="labelAy"/>
                                        <ColumnDefinition Width="*" SharedSizeGroup="labelUcretsiz"/>
                                        <ColumnDefinition Width="*" SharedSizeGroup="labelUcretli"/>
                                        <ColumnDefinition Width="*" SharedSizeGroup="labelRapor"/>
                                        <ColumnDefinition Width="*" SharedSizeGroup="labelYillik"/>
                                        <ColumnDefinition Width="*" SharedSizeGroup="labelYurtici"/>
                                        <ColumnDefinition Width="*" SharedSizeGroup="labelYurtdisi"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Margin="10 0 0 0" Text="OCAK" Style="{StaticResource VacationTextBlockMonths}"/>
                                    <TextBox Grid.Column="1" Margin="10 0 0 0" Text="{Binding Ocak2018_C1, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBox Grid.Column="2" Margin="10 0 0 0" Text="{Binding Ocak2018_C2, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBox Grid.Column="3" Margin="10 0 0 0" Text="{Binding Ocak2018_C3, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBox Grid.Column="4" Margin="10 0 0 0" Text="{Binding Ocak2018_C4, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBox Grid.Column="5" Margin="10 0 0 0" Text="{Binding Ocak2018_C5, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBox Grid.Column="6" Margin="10 0 0 0" Text="{Binding Ocak2018_C6, UpdateSourceTrigger=PropertyChanged}" />

                                </Grid>

                                <Grid Grid.Row="2" Margin="0 10 0 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" SharedSizeGroup="labelAy"/>
                                        <ColumnDefinition Width="*" SharedSizeGroup="labelUcretsiz"/>
                                        <ColumnDefinition Width="*" SharedSizeGroup="labelUcretli"/>
                                        <ColumnDefinition Width="*" SharedSizeGroup="labelRapor"/>
                                        <ColumnDefinition Width="*" SharedSizeGroup="labelYillik"/>
                                        <ColumnDefinition Width="*" SharedSizeGroup="labelYurtici"/>
                                        <ColumnDefinition Width="*" SharedSizeGroup="labelYurtdisi"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Margin="10 0 0 0" Text="ŞUBAT" Style="{StaticResource VacationTextBlockMonths}"/>
                                    <TextBox Grid.Column="1" Margin="10 0 0 0" Text="{Binding Subat2018_C1, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBox Grid.Column="2" Margin="10 0 0 0" Text="{Binding Subat2018_C2, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBox Grid.Column="3" Margin="10 0 0 0" Text="{Binding Subat2018_C3, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBox Grid.Column="4" Margin="10 0 0 0" Text="{Binding Subat2018_C4, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBox Grid.Column="5" Margin="10 0 0 0" Text="{Binding Subat2018_C5, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBox Grid.Column="6" Margin="10 0 0 0" Text="{Binding Subat2018_C6, UpdateSourceTrigger=PropertyChanged}" />

